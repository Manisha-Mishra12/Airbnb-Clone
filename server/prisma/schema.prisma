datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  listings  Listing[]
  password  String
  roles     Json
  trips     Trip[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
  wishLists WishList[]
}

model Listing {
  createdAt        DateTime @default(now())
  description      String
  id               String   @id @default(cuid())
  listingCreatedBy User     @relation(fields: [User], references: [id])
  User             String
  locationData     Json
  locationType     String
  mapData          Json
  photos           Json
  placeAmenties    Json
  placeSpace       Json
  placeType        String
  price            Float
  title            String
  trip             Trip?    @relation(fields: [tripId], references: [id])
  tripId           String?  @unique
  updatedAt        DateTime @updatedAt
  wishList         WishList @relation(fields: [wishListId], references: [id])
  wishListId       String   @unique
}

model WishList {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listings  Listing?
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Trip {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  listings  Listing?
  tripinfo  Json
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
